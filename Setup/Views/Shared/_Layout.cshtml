@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Setup</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Setup.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/5.0.11/signalr.min.js"></script>
    <script>
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/gameHub")
            .build();

        connection.start().catch(err => console.error(err.toString()));

        connection.on("Removed", function () {
            location.href = "/Home/LogOut";
        });
        connection.on("Promoted", function () {
            location.reload();
        });
        connection.onclose(() => {
            console.log("Disconnected");
            setTimeout(() => connection.start(), 5000);
        });
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Setup</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == null)
                        {
                            @if (ViewContext.RouteData.Values["action"]!.ToString()!.Equals("Login", StringComparison.OrdinalIgnoreCase))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Register">Registreren</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Access" asp-action="Login">Inloggen</a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="CV" asp-action="Index">Curriculum Vitae</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dammen" asp-action="Index">Dammen!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                            </li>

                            var userRole = Context.Items["UserRole"] as string;
                            var userEmail = Context.Items["UserEmail"] as string;
                            if (userRole == "Moderator" || userRole == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Management" asp-action="Index">Accounts beheren</a>
                                </li>
                            }

                            <li class="nav-item maintain-right">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Profile">Profiel</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Uitloggen</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <section class="gdpr-consent hide">

            <div class="gdpr-consent__description">
                <p>
                    Deze website gebruikt cookies.
                    We gebruiken cookies om content te personaliseren, voor social media en het analyseren
                    van verkeer op de website, advertenties.
                </p>
            </div>

            <div class="gdpr-consent__choice">
                <button class="gdpr-consent__button--accept">Ja, natuurlijk</button>
                <button class="gdpr-consent__button--reject">Neu, misschien later</button>
            </div>

        </section>
        <div class="container">
            &copy; 2023 - Setup - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script defer src="~/js/gdpr.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
