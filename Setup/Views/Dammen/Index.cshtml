@model IEnumerable<Setup.Data.DamSpel>

@{
    ViewData["Title"] = "Index";

}
<script src="~/js/testing.js" asp-append-version="true"></script>
<h1>Index</h1>

<table class="table">
    <thead>Spel naam</thead>
    <thead>Speler 1</thead>
    <thead>Speler 2</thead>
    <thead>Spel bekijken</thead>
    <thead>Spelen</thead>
    <tbody>
        @foreach (var spel in ViewBag.DamSpellen)
        {
            <tr>
                <td>@spel.SpelNaam</td>
                @foreach (var speler in ViewBag.Spelers)
                {
                    if (speler.ID == spel.CreatorId)
                    {
                        <td>@speler.Naam</td>
                    }
                }
                <td>
                    <a asp-action="Edit" >Edit</a>
                </td>
                <td>
                    <a asp-action="Details">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Create">Maak spel aan</a> |
    <a asp-action="Index">Back to List</a>
    <button id="create-game-button" draggable="true">Create Game</button>
</div>
