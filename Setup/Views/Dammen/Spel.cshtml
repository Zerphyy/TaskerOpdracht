@using Newtonsoft.Json;
@model Setup.Data.DamSpel

@{
    ViewData["Title"] = "Spel";
}

<h1>View van het damspel @Model.SpelNaam</h1>

<div id="shadowHost"></div>

<script src="~/js/ShadowRoot/SRInit.js" asp-append-version="true"></script>
<script src="~/js/ShadowRoot/SRDambord.js" asp-append-version="true"></script>
<script src="~/js/ShadowRoot/SRChat.js" asp-append-version="true"></script>
<script src="~/js/DamSpelMechanics.js" asp-append-version="true"></script>

<script>
    window.onload = function () {
        // Call the placePieces function with the BordStand value
        var spelersArray = JSON.parse('@Html.Raw(ViewBag.Spelers)');
        placePieces('@ViewBag.BordStand', spelersArray, '@ViewBag.Gebruiker');
    }
</script>
