@model Setup.Models.ValidateLoginModel;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Validate" method="post">
        <h1>Login</h1>
        <input type="text" placeholder="2FA code" asp-for="TwoFa"/>
        <button type="submit">Valideer</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }

    </form>
</body>
</html>
